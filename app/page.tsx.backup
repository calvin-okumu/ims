// Helper function for ZKBio API calls
const zkbioApiCall = async (endpoint, options = {}) => {
  if (API_CONFIG.token === 'your_api_token_here') {
    throw new Error('ZKBio API token not configured. Please set NEXT_PUBLIC_ZKBIO_TOKEN environment variable.');
  }
  
  const url = `${API_CONFIG.baseURL}${endpoint}?access_token=${API_CONFIG.token}`;
  const response = await fetch(url, {
    headers: {
      'Content-Type': 'application/json',
      ...options.headers
    },
    ...options
  });
  
  const data = await response.json();
  
  if (data.code < 0) {
    throw new Error(`ZKBio API Error ${data.code}: ${data.message}`);
  }
  
  return data;
};

