                <label className="block text-slate-300 mb-2">Account Number *</label>
                <input
                  type="text"
                  name="accountNumber"
                  value={formData.accountNumber}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                  placeholder="PB-123456"
                />
              </div>
              
              <div>
                <label className="block text-slate-300 mb-2">User Type *</label>
                <select
                  name="userType"
                  value={formData.userType}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                >
                  <option value="principal">Principal Account Holder</option>
                  <option value="spouse">Spouse</option>
                </select>
              </div>

              <div>
                <label className="block text-slate-300 mb-2">First Name *</label>
                <input
                  type="text"
                  name="firstName"
                  value={formData.firstName}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                />
              </div>

              <div>
                <label className="block text-slate-300 mb-2">Last Name *</label>
                <input
                  type="text"
                  name="lastName"
                  value={formData.lastName}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                />
              </div>

              <div>
                <label className="block text-slate-300 mb-2">Email</label>
                <input
                  type="email"
                  name="email"
                  value={formData.email}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                />
              </div>

              <div>
                <label className="block text-slate-300 mb-2">Card Number</label>
                <input
                  type="text"
                  name="cardNo"
                  value={formData.cardNo}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                  placeholder="Optional"
                />
              </div>

              <div>
                <label className="block text-slate-300 mb-2">Gender</label>
                <select
                  name="gender"
                  value={formData.gender}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                >
                  <option value="M">Male</option>
                  <option value="F">Female</option>
                </select>
              </div>
            </div>

            {/* Custom Fields */}
            <div className="mb-6 p-4 bg-slate-700/50 rounded-lg border border-slate-600">
              <h3 className="text-lg font-semibold text-white mb-4">Custom Fields</h3>
              <div className="grid grid-cols-3 gap-4">
                <div>
                  <label className="block text-slate-300 mb-2">Preferred Branch</label>
                  <input
                    type="text"
                    name="custom_preferredBranch"
                    value={formData.customFields.preferredBranch}
                    onChange={handleInputChange}
                    className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                  />
                </div>
                <div>
                  <label className="block text-slate-300 mb-2">Relationship Manager</label>
                  <input
                    type="text"
                    name="custom_relationshipManager"
                    value={formData.customFields.relationshipManager}
                    onChange={handleInputChange}
                    className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                  />
                </div>
                <div>
                  <label className="block text-slate-300 mb-2">Account Tier</label>
                  <select
                    name="custom_accountTier"
                    value={formData.customFields.accountTier}
                    onChange={handleInputChange}
                    className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                  >
                    <option value="platinum">Platinum</option>
                    <option value="gold">Gold</option>
                    <option value="silver">Silver</option>
                  </select>
                </div>
              </div>
            </div>

            {/* Fingerprint Capture */}
            <div className="mb-6 p-6 bg-slate-700/50 rounded-lg border border-slate-600">
              <h3 className="text-lg font-semibold text-white mb-4">Fingerprint Registration (ZKBio)</h3>
              
              <div className="mb-4">
                <label className="block text-slate-300 mb-2">Select Finger</label>
                <select
                  name="fingerIndex"
                  value={formData.fingerIndex}
                  onChange={handleInputChange}
                  className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                >
                  <option value="0">Right Thumb</option>
                  <option value="1">Right Index</option>
                  <option value="2">Right Middle</option>
                  <option value="3">Right Ring</option>
                  <option value="4">Right Little</option>
                  <option value="5">Left Thumb</option>
                  <option value="6">Left Index</option>
                  <option value="7">Left Middle</option>
                  <option value="8">Left Ring</option>
                  <option value="9">Left Little</option>
                </select>
              </div>
              
              <div className="flex items-center justify-between">
                <div>
                  {formData.fingerprintData ? (
                    <div className="text-green-400 flex items-center gap-2">
                      <CheckCircle size={24} />
                      <div>
                        <div>Fingerprint captured (Quality: {formData.fingerprintData.quality}%)</div>
                        <div className="text-sm text-slate-400">Template Version: {formData.fingerprintData.version}</div>
                      </div>
                    </div>
                  ) : (
                    <div className="text-slate-400">No fingerprint captured</div>
                  )}
                </div>
                <button
                  onClick={simulateFingerprintCapture}
                  className="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg flex items-center gap-2 transition-colors"
                >
                  <Fingerprint size={20} />
                  Capture Fingerprint
                </button>
              </div>
            </div>

            {/* Access Level Selection */}
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                <Shield size={20} />
                Select Access Level *
              </h3>
              <select
                name="selectedAccessLevel"
                value={formData.selectedAccessLevel}
                onChange={handleInputChange}
                className="w-full bg-slate-700 text-white px-4 py-3 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none mb-4"
              >
                <option value="">Choose an access level...</option>
                {accessLevels.map(level => (
                  <option key={level.id} value={level.id}>
                    {level.name} - {level.description}
                  </option>
                ))}
              </select>
              
              {formData.selectedAccessLevel && (
                <div className="p-4 bg-slate-700/50 rounded-lg border border-slate-600">
                  <h4 className="text-white font-medium mb-3">Door Access Included:</h4>
                  <div className="grid grid-cols-2 gap-2">
                    {(() => {
                      const selectedLevel = accessLevels.find(level => level.id === parseInt(formData.selectedAccessLevel));
                      return selectedLevel ? selectedLevel.doorIds.map(doorId => {
                        const door = db.doors.find(d => d.id === doorId);
                        return (
                          <div key={doorId} className="flex items-center gap-2 text-slate-300">
                            <DoorOpen size={16} className="text-blue-400" />
                            <span>{door?.name} - {door?.location}</span>
                          </div>
                        );
                      }) : [];
                    })()}
                  </div>
                </div>
              )}
            </div>

            <button
              onClick={registerUser}
              className="w-full bg-green-600 hover:bg-green-700 text-white py-4 rounded-lg font-semibold text-lg transition-colors"
            >
              Register User & Sync to ZKBio
            </button>
          </div>
        )}

        {/* Users List */}
        {activeTab === 'users' && (
          <div className="bg-slate-800 rounded-lg shadow-xl p-6 border border-slate-700">
            <h2 className="text-2xl font-bold text-white mb-6">Registered Users</h2>
            
            {users.length === 0 ? (
              <div className="text-center py-12 text-slate-400">
                <Users size={48} className="mx-auto mb-4 opacity-50" />
                <p>No users registered yet</p>
              </div>
            ) : (
              <div className="space-y-4">
                {users.map(user => (
                  <div key={user.id} className="bg-slate-700/50 p-5 rounded-lg border border-slate-600">
                    <div className="flex justify-between items-start mb-3">
                      <div>
                        <h3 className="text-xl font-semibold text-white">
                          {user.firstName} {user.lastName}
                        </h3>
                        <p className="text-slate-400 text-sm">
                          {user.userType === 'principal' ? 'Principal Account Holder' : 'Spouse'} • 
                          Account: {user.accountNumber}
                        </p>
                      </div>
                      <div className="flex gap-2">
                        <span className="bg-green-600 text-white px-3 py-1 rounded-full text-sm">
                          {user.status}
                        </span>
                        <button
                          onClick={() => deleteUser(user.accountNumber)}
                          className="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-full text-sm transition-colors"
                        >
                          Delete
                        </button>
                      </div>
                    </div>
                    
                    <div className="grid grid-cols-2 gap-4 mb-3">
                      <div>
                        <span className="text-slate-400 text-sm">Email:</span>
                        <p className="text-white">{user.email || 'N/A'}</p>
                      </div>
                      <div>
                        <span className="text-slate-400 text-sm">Phone:</span>
                        <p className="text-white">{user.phone || 'N/A'}</p>
                      </div>
                      <div>
                        <span className="text-slate-400 text-sm">Card Number:</span>
                        <p className="text-white">{user.cardNo || 'N/A'}</p>
                      </div>
                      <div>
                        <span className="text-slate-400 text-sm">Gender:</span>
                        <p className="text-white">{user.gender === 'M' ? 'Male' : 'Female'}</p>
                      </div>
                      <div>
                        <span className="text-slate-400 text-sm">Preferred Branch:</span>
                        <p className="text-white">{user.customFields.preferredBranch || 'N/A'}</p>
                      </div>
                      <div>
                        <span className="text-slate-400 text-sm">Account Tier:</span>
                        <p className="text-white capitalize">{user.customFields.accountTier}</p>
                      </div>
                    </div>
                    
                    <div className="mb-3">
                      <span className="text-slate-400 text-sm">Fingerprint:</span>
                      <div className="flex items-center gap-2 mt-1">
                        <Fingerprint size={16} className="text-purple-400" />
                        <span className="text-white text-sm">
                          Registered (Quality: {user.fingerprintData?.quality}%)
                        </span>
                      </div>
                    </div>
                    
                    <div>
                      <span className="text-slate-400 text-sm">Access Level:</span>
                      <div className="mt-2">
                        {user.selectedAccessLevel ? (
                          (() => {
                            const level = accessLevels.find(l => l.id === parseInt(user.selectedAccessLevel));
                            return level ? (
                              <div>
                                <span className="bg-purple-600/20 text-purple-300 px-3 py-1 rounded-full text-sm font-medium">
                                  {level.name}
                                </span>
                                <p className="text-slate-400 text-xs mt-1">{level.description}</p>
                                <div className="grid grid-cols-2 gap-1 mt-2">
                                  {level.doorIds.map(doorId => {
                                    const door = db.doors.find(d => d.id === doorId);
                                    return (
                                      <div key={doorId} className="text-xs text-slate-500">
                                        • {door?.name}
                                      </div>
                                    );
                                  })}
                                </div>
                              </div>
                            ) : null;
                          })()
                        ) : (
                          <span className="text-slate-500 text-sm">No access level assigned</span>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        {/* Access Level Management */}
        {activeTab === 'accessLevels' && (
          <div className="space-y-6">
            {/* Create New Access Level */}
            <div className="bg-slate-800 rounded-lg shadow-xl p-6 border border-slate-700">
              <h2 className="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                <Plus size={24} />
                Create New Access Level
              </h2>
              
              <div className="grid grid-cols-2 gap-6 mb-6">
                <div>
                  <label className="block text-slate-300 mb-2">Access Level Name *</label>
                  <input
                    type="text"
                    name="name"
                    value={accessLevelForm.name}
                    onChange={handleAccessLevelInputChange}
                    className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                    placeholder="e.g., Premium Customer Access"
                  />
                </div>
                
                <div>
                  <label className="block text-slate-300 mb-2">Description *</label>
                  <input
                    type="text"
                    name="description"
                    value={accessLevelForm.description}
                    onChange={handleAccessLevelInputChange}
                    className="w-full bg-slate-700 text-white px-4 py-2 rounded-lg border border-slate-600 focus:border-blue-500 focus:outline-none"
                    placeholder="e.g., Access to main areas and VIP lounge"
                  />
                </div>
              </div>

              {/* Door Selection for Access Level */}
              <div className="mb-6">
                <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                  <DoorOpen size={20} />
                  Select Doors for this Access Level *
                </h3>
                
                {/* Area Filter Dropdown */}
                <div className="mb-4">
                  <label className="block text-sm font-medium text-slate-300 mb-2">Filter by Area (Optional)</label>
                  <select
                    value={selectedArea || ''}
                    onChange={(e) => setSelectedArea(e.target.value ? Number(e.target.value) : null)}
                    className="w-full p-2 border border-slate-600 rounded bg-slate-700 text-white"
                  >
                    <option value="">All Areas</option>
                    {areas.map((area) => (
                      <option key={area.AreaID} value={area.AreaID}>
                        {area.Name}
                      </option>
                    ))}
                  </select>
                </div>

                <div className="space-y-4">
                  {doorsLoading ? (
                    <div className="space-y-3">
                      {Array.from({ length: 4 }, (_, i) => (
                        <Skeleton key={i} variant="rectangular" height="80px" />
                      ))}
                    </div>
                  ) : doorsError ? (
                    <div className="text-center p-8 bg-red-50 border border-red-200 rounded-lg">
                      <AlertCircle className="w-12 h-12 text-red-500 mx-auto mb-3" />
                      <p className="text-red-800 font-medium">{doorsError}</p>
                    </div>
                  ) : filteredDoors.length === 0 ? (
                    <div className="text-center p-8 bg-slate-50 border border-slate-200 rounded-lg">
                      <DoorOpen className="w-12 h-12 text-slate-400 mx-auto mb-3" />
                      <p className="text-slate-600 font-medium">No doors found for this area</p>
                      <p className="text-slate-500 text-sm mt-2">Try selecting a different area or check if doors are properly configured</p>
                    </div>
                  ) : (
                    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                      {filteredDoors.map(door => {
                        const isSelected = accessLevelForm.selectedDoors.includes(door.ReaderID);
                        return (
                          <label
                            key={door.ReaderID}
                            className={`relative group cursor-pointer rounded-xl border-2 p-4 transition-all duration-200 ${
                              isSelected
                                ? 'bg-gradient-to-br from-blue-50 to-indigo-50 border-blue-500 shadow-lg transform scale-105'
                                : 'bg-white border-slate-200 hover:border-blue-300 hover:shadow-md'
                            }`}
                          >
                            <div className="flex items-start justify-between">
                              <div className="flex items-center space-x-3">
                                <div className={`relative w-5 h-5 rounded border-2 transition-colors ${
                                  isSelected
                                    ? 'bg-blue-500 border-blue-500'
                                    : 'bg-white border-slate-300 group-hover:border-blue-400'
                                }`}>
                                  {isSelected && (
                                    <svg className="w-3 h-3 text-white absolute top-0.5 left-0.5" fill="currentColor" viewBox="0 0 20 20">
                                      <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd" />
                                    </svg>
                                  )}
                                </div>
                                <div className="flex-1">
                                  <h4 className={`font-semibold text-sm mb-1 ${
                                    isSelected ? 'text-blue-900' : 'text-slate-900 group-hover:text-blue-700'
                                  }`}>
                                    {door.Name}
                                  </h4>
                                  <div className="space-y-1">
                                    {door.Location && (
                                      <div className="flex items-center text-xs text-slate-500">
                                        <MapPin className="w-3 h-3 mr-1" />
                                        {door.Location}
                                      </div>
                                    )}
                                    {door.Area && (
                                      <div className={`inline-flex items-center text-xs px-2 py-1 rounded-full font-medium ${
                                        isSelected
                                          ? 'bg-blue-100 text-blue-700'
                                          : 'bg-slate-100 text-slate-600'
                                      }`}>
                                        {door.Area}
                                      </div>
                                    )}
                                  </div>
                                </div>
                              </div>
                            </div>
                            
                            {/* Hover effect overlay */}
                            {!isSelected && (
                              <div className="absolute inset-0 rounded-xl bg-blue-500 opacity-0 group-hover:opacity-5 transition-opacity" />
                            )}
                          </label>
                        );
                      })}
                    </div>
                  )}
                </div>
              </div>

              <button
                onClick={createAccessLevel}
                className="w-full bg-green-600 hover:bg-green-700 text-white py-4 rounded-lg font-semibold text-lg transition-colors"
              >
                Create Access Level & Sync to ZKBio
              </button>
            </div>

            {/* Existing Access Levels */}
            <div className="bg-slate-800 rounded-lg shadow-xl p-6 border border-slate-700">
              <h2 className="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                <Shield size={24} />
                Existing Access Levels
              </h2>
              
              {accessLevels.length === 0 ? (
                <div className="text-center py-12 text-slate-400">
                  <Shield size={48} className="mx-auto mb-4 opacity-50" />
                  <p>No access levels created yet</p>
                </div>
              ) : (
                <div className="space-y-4">
                  {accessLevels.map(level => (
                    <div key={level.id} className="bg-slate-700/50 p-5 rounded-lg border border-slate-600">
                      <div className="flex justify-between items-start mb-3">
                        <div>
                          <h3 className="text-xl font-semibold text-white">{level.name}</h3>
                          <p className="text-slate-400 text-sm">{level.description}</p>
                          <p className="text-slate-500 text-xs mt-1">
                            Created: {new Date(level.createdAt).toLocaleString()}
                          </p>
                        </div>
                        <div className="flex gap-2">
                          <span className="bg-green-600 text-white px-3 py-1 rounded-full text-sm">
                            Active
                          </span>
                          <button
                            onClick={() => deleteAccessLevel(level.id)}
                            className="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-full text-sm transition-colors flex items-center gap-1"
                          >
                            <Trash2 size={14} />
                            Delete
                          </button>
                        </div>
                      </div>
                      
                      <div>
                        <span className="text-slate-400 text-sm">Door Access:</span>
                        <div className="grid grid-cols-2 gap-2 mt-2">
                          {level.doorIds.map(doorId => {
                            const door = db.doors.find(d => d.id === doorId);
                            return (
                              <div key={doorId} className="flex items-center gap-2 text-slate-300">
                                <DoorOpen size={16} className="text-blue-400" />
                                <span>{door?.name} - {door?.location}</span>
                              </div>
                            );
                          })}
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </div>
          </div>
        )}

        {/* Access Logs */}
        {activeTab === 'api-test' && (
          <div className="bg-slate-800 rounded-lg shadow-xl p-6 border border-slate-700">
            <ApiConnectivityTest />
          </div>
        )}

        {activeTab === 'logs' && (
          <div className="bg-slate-800 rounded-lg shadow-xl p-6 border border-slate-700">
            <h2 className="text-2xl font-bold text-white mb-6">Access Transaction Logs</h2>
            
            {accessLogs.length === 0 ? (
              <div className="text-center py-12 text-slate-400">
                <Database size={48} className="mx-auto mb-4 opacity-50" />
                <p>No access logs available</p>
              </div>
            ) : (
              <div className="space-y-3">
                {accessLogs.map(log => (
                  <div key={log.id} className="bg-slate-700/50 p-4 rounded-lg border border-slate-600">
                    <div className="flex justify-between items-start">
                      <div>
                        <h4 className="text-white font-semibold">{log.eventName}</h4>
                        <p className="text-slate-400 text-sm">{log.doorName}</p>
                      </div>
                      <div className="text-right">
                        <p className="text-white text-sm">{new Date(log.eventTime).toLocaleString()}</p>
                        <p className="text-slate-400 text-xs">{log.verifyModeName}</p>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>
        )}
      </div>
    </div>
  );
}